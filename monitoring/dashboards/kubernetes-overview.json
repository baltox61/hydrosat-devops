{
  "title": "Kubernetes Cluster Overview",
  "tags": [
    "kubernetes",
    "cluster",
    "overview"
  ],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "Cluster Health",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(kube_node_status_condition{condition=\"Ready\",status=\"true\"})",
          "legendFormat": "Ready Nodes",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "thresholds"
          },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "Total Pods Running",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=\"Running\"})",
          "legendFormat": "Running Pods",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "CPU Usage %",
      "type": "gauge",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 * sum(rate(container_cpu_usage_seconds_total{container!=\"\"}[5m])) / sum(kube_node_status_allocatable{resource=\"cpu\"})",
          "legendFormat": "CPU",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "Memory Usage %",
      "type": "gauge",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 * sum(container_memory_working_set_bytes{container!=\"\"}) / sum(kube_node_status_allocatable{resource=\"memory\"})",
          "legendFormat": "Memory",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 70,
                "color": "yellow"
              },
              {
                "value": 90,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "showThresholdLabels": true,
        "showThresholdMarkers": true
      }
    },
    {
      "title": "Pods by Namespace",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase{phase=\"Running\"}) by (namespace)",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Pods"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": false,
        "current": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "CPU by Namespace",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{container!=\"\"}[5m])) by (namespace)",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "CPU Cores"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": false,
        "current": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "Memory by Namespace (GB)",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{container!=\"\"}) by (namespace) / 1024 / 1024 / 1024",
          "legendFormat": "{{namespace}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "Memory (GB)"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": false,
        "current": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "Pod Status",
      "type": "piechart",
      "gridPos": {
        "x": 12,
        "y": 10,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(kube_pod_status_phase) by (phase)",
          "legendFormat": "{{phase}}",
          "refId": "A"
        }
      ],
      "options": {
        "legend": {
          "displayMode": "table",
          "placement": "right",
          "values": [
            "value"
          ]
        },
        "pieType": "donut"
      }
    }
  ]
}
