{
  "title": "Weather Products API",
  "tags": [
    "api",
    "products",
    "fastapi"
  ],
  "timezone": "browser",
  "editable": true,
  "graphTooltip": 1,
  "refresh": "30s",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "panels": [
    {
      "title": "API Status",
      "type": "stat",
      "gridPos": {
        "x": 0,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "up{service=\"products-api\"}",
          "legendFormat": "API Status",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "value",
              "options": {
                "0": {
                  "text": "DOWN",
                  "color": "red"
                }
              }
            },
            {
              "type": "value",
              "options": {
                "1": {
                  "text": "UP",
                  "color": "green"
                }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "red"
              },
              {
                "value": 1,
                "color": "green"
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      }
    },
    {
      "title": "Request Rate (req/s)",
      "type": "stat",
      "gridPos": {
        "x": 6,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service=\"products-api\"}[5m]))",
          "legendFormat": "Requests/sec",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "reqps",
          "decimals": 2,
          "color": {
            "mode": "palette-classic"
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "Avg Response Time",
      "type": "stat",
      "gridPos": {
        "x": 12,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"products-api\"}[5m])) by (le)) * 1000",
          "legendFormat": "P95 Latency",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ms",
          "decimals": 0,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 200,
                "color": "yellow"
              },
              {
                "value": 500,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "value",
        "graphMode": "area",
        "textMode": "value_and_name"
      }
    },
    {
      "title": "Error Rate %",
      "type": "stat",
      "gridPos": {
        "x": 18,
        "y": 0,
        "w": 6,
        "h": 4
      },
      "targets": [
        {
          "expr": "100 * sum(rate(http_requests_total{service=\"products-api\",status=~\"5..\"}[5m])) / sum(rate(http_requests_total{service=\"products-api\"}[5m]))",
          "legendFormat": "Error Rate",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "decimals": 2,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "value": 0,
                "color": "green"
              },
              {
                "value": 1,
                "color": "yellow"
              },
              {
                "value": 5,
                "color": "red"
              }
            ]
          }
        }
      },
      "options": {
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      }
    },
    {
      "title": "Requests per Second",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service=\"products-api\"}[5m])) by (method, endpoint)",
          "legendFormat": "{{method}} {{endpoint}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "avg": true,
        "current": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "Response Time (P50, P95, P99)",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 4,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{service=\"products-api\"}[5m])) by (le)) * 1000",
          "legendFormat": "P50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{service=\"products-api\"}[5m])) by (le)) * 1000",
          "legendFormat": "P95",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_request_duration_seconds_bucket{service=\"products-api\"}[5m])) by (le)) * 1000",
          "legendFormat": "P99",
          "refId": "C"
        }
      ],
      "yaxes": [
        {
          "format": "ms",
          "label": "Latency"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "HTTP Status Codes",
      "type": "graph",
      "gridPos": {
        "x": 0,
        "y": 10,
        "w": 12,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(http_requests_total{service=\"products-api\"}[5m])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "reqps",
          "label": "Requests/sec"
        },
        {
          "format": "short"
        }
      ],
      "legend": {
        "show": true,
        "alignAsTable": true,
        "current": true
      },
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "API Pod Memory (MB)",
      "type": "graph",
      "gridPos": {
        "x": 12,
        "y": 10,
        "w": 6,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(container_memory_working_set_bytes{namespace=\"data\",pod=~\"products-api.*\"}) / 1024 / 1024",
          "legendFormat": "Memory Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "mbytes",
          "label": "Memory"
        },
        {
          "format": "short"
        }
      ],
      "tooltip": {
        "shared": true
      }
    },
    {
      "title": "API Pod CPU",
      "type": "graph",
      "gridPos": {
        "x": 18,
        "y": 10,
        "w": 6,
        "h": 6
      },
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{namespace=\"data\",pod=~\"products-api.*\"}[5m]))",
          "legendFormat": "CPU Usage",
          "refId": "A"
        }
      ],
      "yaxes": [
        {
          "format": "short",
          "label": "CPU Cores"
        },
        {
          "format": "short"
        }
      ],
      "tooltip": {
        "shared": true
      }
    }
  ]
}
